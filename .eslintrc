// SyntheticEvent not supportet by eslint at this moment -> make globals
// https://github.com/gajus/eslint-plugin-flowtype/issues/261#issuecomment-327387222

{
    "extends": [
        "eslint:recommended",
    ],
    "parser": "babel-eslint",
    "globals": {
        "SyntheticEvent": true,
        "SyntheticAnimationEvent": true,
        "SyntheticClipboardEvent": true,
        "SyntheticCompositionEvent": true,
        "SyntheticInputEvent": true,
        "SyntheticUIEvent": true,
        "SyntheticFocusEvent": true,
        "SyntheticKeyboardEvent": true,
        "SyntheticMouseEvent": true,
        "SyntheticDragEvent": true,
        "SyntheticWheelEvent": true,
        "SyntheticTouchEvent": true,
        "SyntheticTransitionEvent": true,
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest": true,
    },
    "rules": {
        "no-console": 0,
        "no-class-assign": 0,
        "no-case-declarations": 0,
        "no-extra-semi": 0,
        "no-mixed-spaces-and-tabs": 0,
        "quotes": 0,
        "react/jsx-boolean-value": 1,
        "react/jsx-no-undef": 1,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/no-did-mount-set-state": 1,
        "react/no-did-update-set-state": 1,
        "react/no-multi-comp": 0,
        "react/no-unknown-property": 1,
        "react/prop-types": 1,
        "react/react-in-jsx-scope": 1,
        "react/self-closing-comp": 1,
        "react/sort-comp": 0,
        "react/jsx-wrap-multilines": 0,
        "no-useless-escape": 0,
        "arrow-parens": 1
    },
    "plugins": ["react"]
}